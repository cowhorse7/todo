generator client {
  provider               = "prisma-client"
  output                 = "./generated"
  runtime                = "nodejs"
  moduleFormat           = "esm"
  generatedFileExtension = "ts"
  importFileExtension    = "ts"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum ByuAccountType {
  NonByu
  Student
  Employee
  ServiceAccount
}

model User {
  ///////////////////
  // DO NOT MODIFY //
  ///////////////////
  // Object info
  id                 String         @id @default(uuid())
  createdAt          DateTime       @default(now())
  updatedAt          DateTime       @updatedAt
  // Site info
  lastLogin          DateTime?
  // BYU info
  accountType        ByuAccountType
  netId              String         @unique
  byuId              String?
  workerId           String?
  // Person info
  firstName          String
  middleName         String?
  lastName           String
  suffix             String?
  preferredFirstName String
  preferredLastName  String
  // Keycloak info
  keycloakId         String         @unique
  ///////////////////
  // DO NOT MODIFY //
  ///////////////////

  // Additional fields can be added below
}

model Item {
  id        Int       @id @default(autoincrement())
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  name      String
  details   String?
  dueDate   DateTime?
  completed Boolean
  list      List      @relation(fields: [listId], references: [id], onDelete: Restrict)
  listId    Int
}

model List {
  id        Int      @id @default(autoincrement())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  name      String
  items     Item[]
}
